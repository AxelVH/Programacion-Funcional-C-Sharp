@model List<CoursesViewModel>
@{ ViewData["Title"] = "Index"; }

<a asp-action="Create">Nuevo</a>

<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            @foreach (CoursesViewModel item in Model)
            {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.State</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <form asp-action="Delete"><input name="Id" asp-for="@item.Id" type="hidden" /><button type="submit">Eliminar</button></form>
                </td>
            </tr>
            }
        }
    </tbody>
</table>

