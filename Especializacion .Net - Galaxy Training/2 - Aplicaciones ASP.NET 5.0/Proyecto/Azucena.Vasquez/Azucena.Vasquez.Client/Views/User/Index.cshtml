@{
    ViewData["Title"] = "Alumnos";
}

<h1>Usuarios</h1>

<a asp-action="Create">Nuevo</a>

<table>
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Email</th>
            <th>Rol</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            @foreach (UserViewModel item in Model)
            {
                <tr>
                    <td>@item.FullName</td>
                    <td>@item.Email</td>
                    <td>@item.UserRoles.FirstOrDefault()?.Role.Name</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                        <form asp-action="Delete"><input name="Id" asp-for="@item.Id" type="hidden" /><button type="submit">Eliminar</button></form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>