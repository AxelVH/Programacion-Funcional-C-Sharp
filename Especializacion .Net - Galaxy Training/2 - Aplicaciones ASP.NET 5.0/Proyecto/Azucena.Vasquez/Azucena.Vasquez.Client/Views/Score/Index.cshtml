@model List<ScoresViewModel>
@{ ViewData["Title"] = "Notas"; }

<h1>Lista de notas</h1>

<a class="btn btn-primary mb-3" asp-action="Create">Nueva Nota</a>

<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>Alumno</th>
            <th>Curso</th>
            <th>Nota</th>
            <th style="width: 5%">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            @foreach (ScoresViewModel item in Model)
            {
                <tr>
                    <td>@item.User.FullName</td>
                    <td>@item.Course.Name</td>
                    <td>@item.Score</td>
                    <td>
                        <a class="btn btn-info mb-2" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                        <form asp-action="Delete"><input name="Id" asp-for="@item.Id" type="hidden" /><button class="btn btn-danger" type="submit">Eliminar</button></form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

