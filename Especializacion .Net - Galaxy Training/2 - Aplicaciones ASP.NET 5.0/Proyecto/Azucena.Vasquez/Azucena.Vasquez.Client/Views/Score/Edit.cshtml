@model ScoresViewModel
@{
    ViewData["Title"] = "Edit";
}

<form asp-action="Edit">
    <h1>Edit</h1>

    <input asp-for="Id" type="hidden" />

    Estudiante
    <select asp-for="UserId"
            asp-items="@(new SelectList(ViewBag.LstStudent,"Id","FullName"))">
        <option>-- Seleccione --</option>
    </select>
    <br />

    Curso
    <select asp-for="CourseId"
            asp-items="@(new SelectList(ViewBag.LstCourses,"Id","Name"))">
        <option>-- Seleccione --</option>
    </select>
    <br />

    Nota
    <input asp-for="Score" type="number" />
    <br />

    <a asp-action="Index">Regresar a la lista</a>
    <button type="submit">Actualizar</button>
</form>