@{
    ViewData["Title"] = "Nuevo Usuario";
}

<h1>Lista de usuarios</h1>

<a class="btn btn-primary mb-3" asp-action="Create">Nuevo Usuario</a>

<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Email</th>
            <th>Rol</th>
            <th style="width: 5%">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            @foreach (UserViewModel item in Model)
            {
                <tr>
                    <td>@item.FullName</td>
                    <td>@item.Email</td>
                    <td>@item.UserRoles.FirstOrDefault()?.Role.Name</td>
                    <td>
                        <a class="btn btn-info mb-2" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                        <form asp-action="Delete"><input name="Id" asp-for="@item.Id" type="hidden" /><button class="btn btn-danger" type="submit">Eliminar</button></form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>